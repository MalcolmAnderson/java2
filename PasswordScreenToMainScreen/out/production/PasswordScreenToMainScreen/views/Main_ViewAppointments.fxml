<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="910.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Main_ViewAppointments_Controller">
   <children>
      <VBox prefHeight="600.0" prefWidth="910.0">
         <children>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="910.0" spacing="30.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" text="Button" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0">
                     <children>
                        <Label text="This is the main page showing the calendar">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" text="Button" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="510.0" prefWidth="910.0">
               <children>
                  <TableView fx:id="tvAppointments" prefHeight="400.0" prefWidth="870.0">
                    <columns>
                      <TableColumn fx:id="id" prefWidth="25.0" text="ID" />
                        <TableColumn fx:id="title" prefWidth="75.0" text="Title" />
                        <TableColumn fx:id="description" prefWidth="200.0" text="Description" />
                        <TableColumn fx:id="location" prefWidth="150.0" text="Location" />
                        <TableColumn fx:id="contact" prefWidth="85.0" text="Contact" />
                        <TableColumn fx:id="type" prefWidth="90.0" text="Type" />
                        <TableColumn fx:id="date" prefWidth="75.0" text="Date" />
                        <TableColumn fx:id="start" prefWidth="60.0" text="Start" />
                        <TableColumn fx:id="end" prefWidth="58.0" text="End" />
                        <TableColumn fx:id="custId" prefWidth="50.0" text="Cust ID" />
                    </columns>
                  </TableView>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="910.0" spacing="20.0">
               <children>
                  <Button fx:id="btnAddAppointment" mnemonicParsing="false" onAction="#onClickAddAppointment" text="Add Appointment" />
                  <Button fx:id="btnEditAppointment" mnemonicParsing="false" onAction="#onClickEditAppointment" text="Edit Appointment" />
                  <Button fx:id="btnDeleteAppointment" mnemonicParsing="false" onAction="#onClickDeleteAppointment" text="Delete Appointment" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="910.0" spacing="20.0">
               <children>
                  <Button fx:id="btnManageCustomers" mnemonicParsing="false" onAction="#onClick_ManageCustomers" text="Manage Customers" />
                  <Button fx:id="btnManageContacts" mnemonicParsing="false" onAction="#onClick_ManageContacts" text="Manage Contacts" />
                  <Button fx:id="btnReportsScreen" mnemonicParsing="false" onAction="#onClick_Reports" text="Reports Screen" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
